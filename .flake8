[flake8]
max-line-length = 88
extend-ignore = E203, E266, E501, W503
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache
max-complexity = 10
per-file-ignores =
    __init__.py:F401
    app.py:E402,F811
    document_processor.py:C901
    conftest.py:F401,F403
    *fixtures*.py:F401
    test_*.py:F401,F841
